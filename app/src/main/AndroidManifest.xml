<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ystmrdk.sub2_bfaa">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.ystmrdk.sub2_bfaa.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.ystmrdk.sub2_bfaa.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver
            android:name=".receiver.AlarmReceiver"
            android:enabled="true"
            android:exported="true" />

        <provider
            android:name=".provider.FavoriteProvider"
            android:authorities="com.ystmrdk.sub2_bfaa"
            android:exported="true"
            android:readPermission="com.ystmrdk.sub2_bfaa.READ_DATABASE"
            android:writePermission="com.ystmrdk.sub2_bfaa.WRITE_DATABASE" />

        <activity android:name=".ui.FavoriteActivity" />
        <activity android:name=".ui.SettingActivity" />
        <activity android:name=".ui.DetailActivity" />
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>